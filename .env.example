# ============================================
# DATABASE CONFIGURATION
# ============================================
# Для Docker: host postgres, port 5432
# Для локального запуску: змініть postgres на localhost
DATABASE_DEVELOPMENT_URI=postgresql+psycopg2://postgres:YOUR_PASSWORD@postgres:5432/truck_partner_db
DATABASE_PRODUCTION_URI=postgresql+psycopg2://postgres:YOUR_PASSWORD@postgres:5432/truck_partner_db

# PostgreSQL credentials (для ініціалізації контейнера)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_PASSWORD
POSTGRES_DB=truck_partner_db

# ============================================
# REDIS & CELERY CONFIGURATION
# ============================================
# Для Docker: host redis
# Для локального запуску: змініть redis на localhost
REDIS_DEVELOPMENT_URI=redis://redis:6379/0
REDIS_PRODUCTION_URI=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ============================================
# APPLICATION SECRETS
# ============================================
SECRET_KEY=your_secret_key_here

# ============================================
# TRUCK MARKET INTEGRATION
# ============================================
TRUCK_BASE_URL=https://truckmarket.com.ua
KEY_ID=your_key_id
USER_ID=your_user_id
COMPANY_ID=your_company_id
cat_3_5_id=category_id_here

# ============================================
# GUNICORN CONFIGURATION (Production WSGI Server)
# ============================================
GUNICORN_WORKERS=4
GUNICORN_LOG_LEVEL=info

# ============================================
# OTHER
# ============================================
BACKUP_DIR=/app/backups
